{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "typeRoots": [
        "./node_modules/@types"
    ],
    },
    "lib": ["es2015"],
    "exclude": [
    "./build/*",
    "./node_modules/*",
  ],
  "include": [
    "./src/**/*.ts"
  ]
  }